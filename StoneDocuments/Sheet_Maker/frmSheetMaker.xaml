<Window x:Class="StoneDocuments.frmSheetMaker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoneDocuments"
        mc:Ignorable="d"
        Title="Batch Sheet Maker" 
        Height="500" 
        Width="850"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <!-- Button Style -->
        <Style x:Key="StyledButton" TargetType="Button">
            <Setter Property="Background" Value="#E5E7EB"/>
            <Setter Property="BorderBrush" Value="#9CA3AF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D1D5DB"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#9CA3AF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="White" 
            CornerRadius="8" 
            BorderBrush="#9CA3AF" 
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0"
                    Background="#2B5A8E"
                    CornerRadius="8,8,0,0"
                    BorderBrush="#E5E7EB"
                    BorderThickness="0,0,0,1">
                <Grid>
                    <TextBlock Text="Batch Sheet Maker" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="15,0,0,0"/>
                    <Button Content="×" 
                            Width="30" 
                            Height="30"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,5,0"
                            Background="Transparent"
                            BorderThickness="0"
                            FontSize="20"
                            Foreground="White"
                            Cursor="Hand"
                            Click="btnCancel_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="3">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E5E7EB"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- Content Area -->
            <Border Grid.Row="1" Margin="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>

                    <Label Content="Enter sheet information below:" 
                           Grid.Row="0" 
                           VerticalAlignment="Center"
                           FontSize="11"/>

                    <DataGrid x:Name="sheetGrid" 
                              Grid.Row="1"
                              GridLinesVisibility="All"
                              AlternatingRowBackground="AliceBlue" 
                              CanUserAddRows="True" 
                              SelectionMode="Single" 
                              AutoGenerateColumns="False"
                              EnableColumnVirtualization="False"
                              EnableRowVirtualization="False"
                              FontSize="11">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Number" Width="80" IsReadOnly="False" Binding="{Binding SheetNumber, Mode=TwoWay}"/>
                            <DataGridTextColumn Header="Name" Width="250" IsReadOnly="False" Binding="{Binding SheetName, Mode=TwoWay}"/>
                            <DataGridComboBoxColumn x:Name="cmbViews" Width="*" Header="View" IsReadOnly="False" 
                                                    SelectedItemBinding="{Binding SelectedView}" DisplayMemberPath="Name"/>
                            <DataGridComboBoxColumn x:Name="cmbSchedules" Width="*" Header="Schedule" IsReadOnly="False" 
                                                    SelectedItemBinding="{Binding SelectedSchedule}" DisplayMemberPath="Name"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Label Content="Select titleblock, category and group for new sheets:" 
                           Grid.Row="2" 
                           VerticalAlignment="Center"
                           FontSize="11"/>

                    <StackPanel Grid.Row="2" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right">
                        <Button x:Name="btnAdd" 
                                Width="25" 
                                Content="+" 
                                Height="25" 
                                Margin="0,0,10,0" 
                                Click="btnAdd_Click"
                                Style="{StaticResource StyledButton}"/>
                        <Button x:Name="btnRemove" 
                                Width="25" 
                                Content="-" 
                                Height="25" 
                                Click="btnRemove_Click"
                                Style="{StaticResource StyledButton}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="3" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Top" 
                                Height="60">
                        <GroupBox Header="Titleblock:" BorderThickness="0" FontSize="11">
                            <ComboBox x:Name="cmbTitleblock" 
                                      Height="30" 
                                      Width="150" 
                                      FontSize="11"
                                      SelectedItem="{Binding SelectedTitleBlock}" 
                                      ItemsSource="{Binding Types}"
                                      DisplayMemberPath="FamilyAndType"/>
                        </GroupBox>
                        <GroupBox Header="Category:" BorderThickness="0" FontSize="11">
                            <ComboBox x:Name="cmbCategory" 
                                      Height="30" 
                                      Width="150" 
                                      FontSize="11"
                                      ItemsSource="{Binding CategoryData}"/>
                        </GroupBox>
                        <GroupBox Header="Group:" BorderThickness="0" FontSize="11">
                            <ComboBox x:Name="cmbGroup" 
                                      Height="30" 
                                      Width="150" 
                                      FontSize="11"
                                      ItemsSource="{Binding GroupData}"/>
                        </GroupBox>
                    </StackPanel>

                    <StackPanel Grid.Row="5" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center">
                        <TextBox x:Name="tbxAddCat" 
                                 Width="130" 
                                 Height="30" 
                                 FontSize="11"
                                 VerticalContentAlignment="Center"
                                 Margin="5,0,0,0"/>
                        <Button x:Name="btnAddCat" 
                                Width="100" 
                                Height="30" 
                                Content="Add Category" 
                                Margin="5,0,0,0" 
                                Click="btnAddCat_Click"
                                Style="{StaticResource StyledButton}"/>
                        <TextBox x:Name="tbxAddGrp" 
                                 Width="130" 
                                 Height="30" 
                                 FontSize="11"
                                 VerticalContentAlignment="Center"
                                 Margin="10,0,0,0"/>
                        <Button x:Name="btnAddGrp" 
                                Width="100" 
                                Height="30" 
                                Margin="5,0,0,0" 
                                Content="Add Group" 
                                Click="btnAddGrp_Click"
                                Style="{StaticResource StyledButton}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="5" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center">
                        <Button x:Name="btnOK" 
                                Width="90" 
                                Content="OK" 
                                Height="30" 
                                Margin="0,0,10,0" 
                                Click="btnOK_Click"
                                Style="{StaticResource StyledButton}"/>
                        <Button x:Name="btnCancel" 
                                Width="90" 
                                Content="Cancel" 
                                Height="30" 
                                Margin="0,0,10,0"
                                Click="btnCancel_Click"
                                Style="{StaticResource StyledButton}"/>
                        <Button x:Name="btnHelp" 
                                Width="90" 
                                Height="30" 
                                Content="Help" 
                                Click="btnHelp_Click"
                                Style="{StaticResource StyledButton}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>